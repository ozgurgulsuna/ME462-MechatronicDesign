<launch>

   <master auto="start"/>
 <!-- Run the map server --> 
    <node name="map_server" pkg="map_server" type="map_server" args="$(find g_slam)/maps/romer5.yaml"/>

 <!--- Run AMCL --> 
    <include file="$(find amcl)/examples/amcl_diff.launch" />
    
    <!--- Run rviz --> 
    <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find alize_2dnav)/rviz_cfg/mapping.rviz"/>
	
   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find alize_2dnav)/param/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
    <rosparam file="$(find alize_2dnav)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find alize_2dnav)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find alize_2dnav)/param/global_costmap_params.yaml" command="load" /> 
    <rosparam file="$(find alize_2dnav)/param/base_local_planner_params.yaml" command="load" />
    
  <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
  <param name="controller_frequency" value="10.0" />
 </node> 
 
 <node name="cmd_vel_to_ackermann_drive" pkg="teb_local_planner" type="cmd_vel_to_ackermann_drive.py" />

</launch> 
